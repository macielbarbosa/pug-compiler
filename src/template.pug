include order.pug

doctype html
html(lang="en")
	head
		meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
		link(href="http://fonts.googleapis.com/css?family=Roboto" rel="stylesheet")
		style
			include style.css
	body
		.body
			.container
				.bar
					img(src='data:image/png;base64,')
				.content
					.header
						div Olá <b class='primary-color'>#{name}</b>,
						div O lote de pedidos <u>Nº #{id}</u> foi cadastrado no SmartRetail.
					.sumaryColumn
						each item in [{ field: 'Conta', value: conta }, { field: 'Varejo', value: varejo }]
							.sumaryItem
								div #{item.field}
								div #{item.value}
					.sumaryColumn
						each item in [{ field: 'Cliente', value: cliente }, { field: 'Nº da Negociação', value: numeroNegociacao }]
							.sumaryItem
								div #{item.field}
								div #{item.value}
					.sumaryColumn
						.sumaryItem
							div Cond. de pagamento
							div #{condicaoPagamento}
					.list
						each item in orders.slice(0,10)
							+order(item)
						- const surplusQuantity = orders.length - 10
						if surplusQuantity > 0
							.info 
								span Para visualizar mais #{surplusQuantity} pedido#{surplusQuantity > 1 ? 's' : ''}, acessar o SmartRetail
					.footer 
						a(href=`${link}` target='_blank')
							button Abrir pedido completo no SmartRetail
